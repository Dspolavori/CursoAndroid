<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sala01.aula02.MainActivity">

    <TextView
        android:id="@+id/Loginlbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:fadingEdge="vertical"
        android:text="@string/loginLbl"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userImp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/loginBtn" />

    <EditText
        android:id="@+id/userImp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="141dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/loginInp"
        android:layout_below="@+id/Loginlbl"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
